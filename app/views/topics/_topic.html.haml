.topic_row
  .vote_box
    .vote_count
      .vote_count_value
        = topic.interest_count
      .vote_count_label
        Interested
  %h1
    = link_to topic.name, topic_path(topic)
  - if current_member
    %p
      = check_box_tag :is_interested 
      interested?
      = check_box_tag :is_expert 
      expert?
      = check_box_tag :will_speak 
      will speak?
  %p
    = link_to "#{pluralize(topic.interest_count, 'enthusiast')}", enthusiasts_topic_path(topic) 
    |
    = link_to "#{pluralize(topic.expert_count, 'expert')}", experts_topic_path(topic) 
    |
    = link_to "#{pluralize(topic.speaker_count, 'speaker')}", speakers_topic_path(topic) 
    - if current_member 
      |
      = link_to('Edit', edit_topic_path(topic)) 
      = link_to('Delete', topic, :confirm => 'Are you sure?', :method => :delete) 
.spacer
