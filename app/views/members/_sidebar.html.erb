<% content_for('sidebar') do %>
	<div class="sidebar-node">
	  <h3>Search Members</h3>
	  <div style="padding: 5px;">
	    <% form_for :member, :url => {:controller => 'members', :action => 'search'} do |f| %>
	      <label for="member_name" class="req">Name or twitter handle:</label>
	      <%= text_field_with_auto_complete :member, :full_name, :size => 21, :autocomplete => "off"  %>
	    <% end %>
	  </div>
	</div>

	<% if @most_recent_members -%>
	<div class="sidebar-node">
	  <h3>Recent Members</h3>
	  <ul>
		  <% @most_recent_members.each do |member| -%>
	    <li><%= link_to h(member.full_name), {:controller => 'members', :action => 'show', :id => member} %></li>
		  <% end -%>
		</ul>
	</div>
	<% end -%>	  

	<% if @occupations -%>
	<div class="sidebar-node">
	  <h3>Members by Profession</h3>
	  <ul>
		<% @occupations.each do |occupation| -%>
	    <li><%= link_to h(occupation.name), {:controller => 'members', :action => 'members_by_occupation', :id => occupation} %></li>
		<% end -%>
	  </ul>
	</div>
	<% end -%>
<% end %>
